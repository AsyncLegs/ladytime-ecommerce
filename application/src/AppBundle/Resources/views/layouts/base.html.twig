<!DOCTYPE html>
<html>
<head>
    <title>{% block title %}Ladytime - бренд из Украины{% endblock %}</title>
    <!-- for-mobile-apps -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="description" content="{% block description'Ladytime - бренд из Украины' %}"/>
    <meta name="keywords" content="{% block keywords'Ladytime - бренд из Украины' %}"/>
    <meta name="robots" content="{% block robots'index, follow' %}"/>
    <meta name="apple-mobile-web-app-capable" content="yes"/>
    <link rel="icon" type="image/vnd.microsoft.icon" href="{{ asset('favicon.ico') }}"/>
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>

    <script type="application/x-javascript">
        addEventListener("load", function () {
            setTimeout(hideURLBar, 0);
        }, false);

        function hideURLBar() {
            window.scrollTo(0, 1);
        }
    </script>

    <!-- //for-mobile-apps -->

    {% block stylesheets %}
        <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic'
              rel='stylesheet' type='text/css'>
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
              crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('assets/global.css') }}">
    {% endblock %}
</head>

<body>

<!-- header -->
{% include '@App/layouts/header.html.twig' %}

{% include '@App/layouts/navigation.html.twig' %}
<!-- //header -->

{% block content %}
{% endblock %}
<!-- newsletter -->
<div class="newsletter">
    <div class="container">
        <div class="col-md-6 w3agile_newsletter_left">
            <h3>Newsletter</h3>
            <p>Excepteur sint occaecat cupidatat non proident, sunt.</p>
        </div>
        <div class="col-md-6 w3agile_newsletter_right">
            <form action="#" method="post">
                <input type="email" name="Email" value="Email" onfocus="this.value = '';"
                       onblur="if (this.value === '') {this.value = 'Email';}" required="">
                <input type="submit" value=""/>
            </form>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
<!-- //newsletter -->
<!-- footer -->

{% include '@App/layouts/footer.html.twig' %}

{%  include '@App/partials/preloader.html.twig' %}
{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.js"
            integrity="sha256-ffw+9zwShMev88XNrDgS0hLIuJkDfXhgyLogod77mn8=" crossorigin="anonymous"></script>
    <script src="{{ asset('assets/manifest.js') }}"></script>
    <script src="{{ asset('assets/vendor.js') }}"></script>
    <script src="{{ asset('assets/application.js') }}"></script>
{% endblock %}
<!-- //footer -->
</body>
</html>